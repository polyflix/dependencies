{
    "compilerOptions": {
      "lib": [
        "ESNext"
      ],
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "removeComments": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.mock.ts"]
  }
